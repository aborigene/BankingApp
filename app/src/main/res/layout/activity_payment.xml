<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="#f0f2f5"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/paymentHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar Pagamento"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/recipientEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="BeneficiÃ¡rio (ex: Conta de Luz)"
        android:textColorHint="#888"
        android:paddingHorizontal="15dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="15dp"
        android:textSize="16sp"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Valor (R$)"
        android:textColorHint="#888"
        android:paddingHorizontal="15dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="30dp"
        android:textSize="16sp"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/confirmPaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:textSize="18sp"
        android:textColor="#fff"
        android:backgroundTint="#007bff"
        android:paddingVertical="15dp"
        android:layout_marginBottom="20dp"
        android:elevation="5dp"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar para o Saldo"
        android:textSize="16sp"
        android:textColor="#fff"
        android:backgroundTint="#6c757d"
        android:paddingVertical="10dp"
        android:elevation="5dp"/>

</LinearLayout>